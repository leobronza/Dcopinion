<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Questionarios"
        android:layout_marginTop="10dp"
        android:background="#082950"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informações Gerais"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textSize="26dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="1"
            android:rowCount="6"
            android:paddingTop="20dp"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView8"
                android:text="Questionarios Respondidos:"
                android:layout_row="0"
                android:layout_column="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="15dp"
                android:singleLine="false"
                android:textSize="20dp"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quant_questoesrespondidas"
                android:text="3"
                android:textSize="24dp"
                android:layout_row="1"
                android:layout_column="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingTop="13dp"
                android:paddingRight="10dp"
                android:layout_gravity="center" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:text="leobronza@hotmail.com"
                android:textSize="24dp"
                android:layout_row="4"
                android:layout_column="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:text="Logado como:"
                android:textSize="20dp"
                android:layout_row="3"
                android:layout_column="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="left" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desativar Conta"
                android:id="@+id/button8"
                android:onClick="onclick_desativarconta"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/Questionarios"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:layout_marginTop="40dp"
                android:layout_row="5"
                android:layout_column="0" />

        </GridLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/button"
        android:onClick="onclick_voltar"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/Questionarios"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />


</RelativeLayout>







