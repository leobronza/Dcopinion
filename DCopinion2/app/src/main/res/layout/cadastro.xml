<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmin2"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="E-mail:"
            android:id="@+id/textView7"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/novo_email" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Senha:"
            android:id="@+id/textView6"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/novo_senha"
            android:password="true" />
    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Categoria:"
            android:id="@+id/textView5"
            android:textIsSelectable="false"
            android:textSize="28dp"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:id="@+id/classificacao"
            android:gravity="center">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:id="@+id/grid_categoria_cadastro">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BCC"
                    android:id="@+id/bcc"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:checked="true"
                    android:onClick="onclick_categoria"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:textColor="#ffffff"
                    android:buttonTint="#ffffff" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Docente"
                    android:id="@+id/docente"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="onclick_categoria"
                    android:checked="false"
                    android:layout_row="0"
                    android:textColor="#ffffff"
                    android:buttonTint="#ffffff" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENC"
                    android:id="@+id/enc"
                    android:textSize="20dp"
                    android:layout_marginRight="10dp"
                    android:onClick="onclick_categoria"
                    android:checked="false"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:textColor="#ffffff"
                    android:textColorHint="@style/Platform.AppCompat"
                    android:buttonTint="#ffffff" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tercerizado"
                    android:id="@+id/tercerizado"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="onclick_categoria"
                    android:checked="false"
                    android:layout_row="1"
                    android:textColor="#ffffff"
                    android:singleLine="false"
                    android:buttonTint="#ffffff" />
            </GridLayout>

        </RadioGroup>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:onClick="onclick_novo_cadastro"
        android:theme="@style/Platform.AppCompat" />

</LinearLayout>