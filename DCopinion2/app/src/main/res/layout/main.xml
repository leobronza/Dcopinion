<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:addStatesFromChildren="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="email"
        android:id="@+id/email"
        android:layout_alignBottom="@+id/sair"
        android:layout_toLeftOf="@+id/sair"
        android:layout_toStartOf="@+id/sair"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:id="@+id/sair"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="onclicksair" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:id="@+id/Pontos"
        android:background="#5dff25"
        android:weightSum="1"
        android:gravity="right"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Pontos:"
            android:id="@+id/texto_pontos"
            android:textSize="35dp"
            android:textColor="#010101"
            android:textStyle="bold|italic"
            android:labelFor="@id/Pontos"
            android:layout_marginLeft="70dp"
            android:gravity="center_vertical|bottom|center_horizontal"
            android:layout_gravity="right"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="333"
            android:id="@+id/quantidade_pontos"
            android:textStyle="bold"
            android:textSize="35dp"
            android:gravity="center_vertical|bottom|center_horizontal"
            android:textColor="#010101"
            android:layout_gravity="bottom|right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:id="@+id/Questionarios"
        android:background="#ff2c20"
        android:layout_below="@+id/Pontos"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questionarios"
            android:id="@+id/texto_questionarios"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/conteudo_questionario" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:id="@+id/Noticias"
        android:background="#26ff00"
        android:layout_below="@+id/Questionarios"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noticias"
            android:id="@+id/texto_questionarios"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/conteudo_noticias" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/Noticias"
        android:layout_marginTop="10dp"
        android:background="#ff00dc"
        android:id="@+id/Opcoes">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultados"
            android:id="@+id/bt_resultados"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:onClick="onclickresultados" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trocar Pontos"
            android:id="@+id/bt_trocarpontos"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="15dp" />
    </LinearLayout>

</RelativeLayout>
