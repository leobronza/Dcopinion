<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Questionarios"
        android:layout_marginTop="10dp"
        android:background="#082950"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificações"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textSize="26dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:rowCount="2"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:text="Novas Questoes"
                android:layout_gravity="left|top"
                android:textSize="24dp"
                android:layout_row="0"
                android:layout_column="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:checked="true"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center_horizontal|bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:text="Novas Noticias"
                android:layout_gravity="left|top"
                android:textSize="24dp"
                android:layout_row="1"
                android:layout_column="0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingTop="13dp"
                android:paddingRight="10dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch2"
                android:checked="true"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center_horizontal|bottom" />

        </GridLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/button"
        android:onClick="onclick_voltar"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/Questionarios"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />


</RelativeLayout>







